#!/bin/sh

BUILD_DIR=$1
CACHE_DIR=$2
ENV_DIR=$3

install_sops() {
  echo "-----> Installing SOPS"
  curl --silent -L https://github.com/mozilla/sops/releases/download/v3.7.3/sops-v3.7.3.linux --output sops
  chmod +x sops
  mkdir -p "$BUILD_DIR/.heroku-helm-sops"
  mv sops "$BUILD_DIR/.heroku-helm-sops/"
}

install_yq() {
  echo "------> Installing YQ"
  curl --silent -L wget https://github.com/mikefarah/yq/releases/download/v4.34.1/yq_linux_386 --output yq
  chmod +x yq

  mkdir -p "$BUILD_DIR/.heroku-helm-sops"
  mv yq "$BUILD_DIR/.heroku-helm-sops/"
}

install_sops
install_yq

export PATH="$PATH:$BUILD_DIR/.heroku-helm-sops/"

python bin/foo.py

mkdir -p "$BUILD_DIR/.profile.d"
cp .profile.d/* $BUILD_DIR/.profile.d/
ls -lah $BUILD_DIR/.profile.d